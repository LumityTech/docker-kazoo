---
target: kubernetes/production/service.yaml
---

{%- set vars = data['vars'] -%}

apiVersion: v1
kind: Service
metadata:
  name: kazoo
  labels:
    app: kazoo
    project: {{ vars['project'] }}
    environment: {{ vars['environment'] }}
spec:
  selector:
    app: kazoo
    project: {{ vars['project'] }}
    environment: {{ vars['environment'] }}
  ports:
  - name: crossbar
    protocol: TCP
    port: 8000
  - name: ws-tcp
    protocol: TCP
    port: 5555
  - name: ws-udp
    protocol: UDP
    port: 5555
  - name: fax-smtp
    protocol: TCP
    port: 19025
  - name: media-proxy
    protocol: TCP
    port: 24517
